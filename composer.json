{
    "name": "phplrt/lsp",
    "type": "library",
    "repositories": [
        {"type": "path", "url": "libs/lsp-code-generator"},
        {"type": "path", "url": "libs/lsp-protocol"},
        {"type": "path", "url": "libs/rpc"},
        {"type": "path", "url": "libs/rpc-dispatcher"},
        {"type": "path", "url": "libs/rpc-hydrator"},
        {"type": "path", "url": "libs/rpc-message"},
        {"type": "path", "url": "libs/rpc-message-factory"}
    ],
    "require": {
        "php": "^8.1",
        "evenement/evenement": "^1.0|^2.0|^3.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "phplrt/lsp-code-generator": "*",
        "phplrt/lsp-protocol": "*",
        "phplrt/rpc": "*",
        "phplrt/rpc-dispatcher": "*",
        "phplrt/rpc-hydrator": "*",
        "phplrt/rpc-message": "*",
        "phplrt/rpc-message-factory": "*",
        "react/socket": "^1.14",
        "symfony/yaml": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Phplrt\\LanguageServer\\": "src"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.17",
        "monolog/monolog": "^3.3",
        "phpunit/phpunit": "^10.1",
        "symfony/var-dumper": "^5.4|^6.0",
        "vimeo/psalm": "^5.12"
    },
    "scripts": {
        "static": "@static:check",
        "static:check": "psalm --no-cache",
        "static:fix": "psalm --no-cache --alter",

        "phpcs": "@phpcs:check",
        "phpcs:check": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",

        "test": "@test:unit",
        "test:unit": "phpunit --testdox",

        "run:server": "@php bin/run",
        "run:vscode": "code ./extension/vscode --extensionDevelopmentPath=extension/vscode"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
