{
    "name": "phplrt/language-server",
    "type": "library",
    "repositories": [
        {"type": "path", "url": "libs/rpc"}
    ],
    "require": {
        "php": "^8.1",
        "evenement/evenement": "^1.0|^2.0|^3.0",
        "psr/log": "^1.0|^2.0|^3.0",
        "phplrt/language-server-rpc": "*",
        "react/socket": "^1.12",
        "symfony/yaml": "^5.4|^6.0"
    },
    "autoload": {
        "psr-4": {
            "Phplrt\\LanguageServer\\": "src"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.17",
        "monolog/monolog": "^3.3",
        "vimeo/psalm": "^5.12",
        "phpunit/phpunit": "^10.1",
        "symfony/var-dumper": "^5.4|^6.0"
    },
    "scripts": {
        "static": "@static:check",
        "static:check": "psalm --no-cache",
        "static:fix": "psalm --no-cache --alter",

        "phpcs": "@phpcs:check",
        "phpcs:check": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",

        "test": "@test:unit",
        "test:unit": "phpunit --testdox"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev",
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
